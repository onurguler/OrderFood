@model ProductDto

@{ var categories = ViewBag.Categories as List<CategoryDto>; }

<a asp-area="Admin" asp-controller="Products" asp-action="Index" class="btn btn-secondary btn-sm mb-3">&LeftArrow; Go Back</a>

<h1>Edit Product</h1>


<form asp-area="Admin" asp-controller="Products" asp-action="Edit" method="POST" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id">

    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control">
                <span asp-validation-for="Title" class="form-text text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Subtitle"></label>
                <input asp-for="Subtitle" class="form-control">
                <span asp-validation-for="Subtitle" class="form-text text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="form-text text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control">
                <span asp-validation-for="Price" class="form-text text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="d-block">Current Image</label>
                <img src="@Model.ImageUrl" alt="" class="img-fluid rounded shadow-sm" width="100" style="object-fit: cover; object-position: center;">
                <a asp-controller="Products" asp-action="RemoveImage" asp-route-id="@Model.Id" class="btn btn-danger">Remove</a>
            </div>

            <label>Change Image</label>
            <div class="custom-file">
                <input type="file" name="image" accept="image/*" class="custom-file-input" id="upload">
                <label class="custom-file-label" for="upload" id="upload-label">Choose image</label>
            </div>

            <p class="font-italic mt-3">The image uploaded will be rendered inside the box below.</p>
            <div class="image-area mt-3 mb-3">
                <img id="imageResult" src="#" alt="" class="img-fluid rounded shadow-sm d-block" width="100" style="object-fit: cover; object-position: center;">
            </div>
        </div>

        @for (int i = 0; i < Model.Categories.Count; i++)
        {
            <input type="hidden" name="SelectedCategories[@i].CategoryId" value="@Model.Categories[@i].Id">
            <input type="hidden" name="SelectedCategories[@i].Name" value="@Model.Categories[@i].Title">
        }

        <div class="col-md-4 mb-3">
            <h5>Edit categories</h5>
            @foreach (var category in categories)
            {
                <div class="custom-control custom-checkbox">
                    <input type="checkbox"
                           name="CategoryIds"
                           id="category_@category.Id"
                           class="custom-control-input"
                           value="@category.Id"
                           @(Model.Categories.Any(sc => sc.Id == category.Id) ? "checked" : "")>
                    <label for="category_@category.Id" class="custom-control-label">@category.Title</label>
                </div>            
            }
        </div>
    </div>

    <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="btn btn-secondary mr-3">Cancel</a>
    <button type="submit" class="btn btn-primary">Save Product</button>
</form>


@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    @await Html.PartialAsync("_ImageUploadScriptsPartial")
}
