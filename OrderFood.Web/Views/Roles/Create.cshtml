@model RoleModel

<a asp-controller="Dashboard" asp-action="Roles" class="btn btn-secondary btn-sm mb-3">&LeftArrow; Go Back</a>

<h1>New Role</h1>

<form asp-controller="Roles" asp-action="Create" method="POST">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="form-text text-danger"></span>
    </div>
    <div class="d-flex align-items-center justify-content-between">
        <a asp-controller="Dashboard" asp-action="Roles" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary">Save Role</button>
    </div>
</form>

@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
