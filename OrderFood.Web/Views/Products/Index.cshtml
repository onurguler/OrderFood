@model ProductListViewModel

<h1>Sizin için seçtiklerimiz...</h1>
<div class="row">
    @foreach (var product in Model.Products)
    {
        <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3 mb-3">
            <a asp-controller="Products" asp-action="Show" asp-route-id="@product.Id"
                class="text-body text-decoration-none mb-3">
                <div class="product-card card rounded h-100">
                    <img src="@product.ImageUrl" alt="" class="card-img-top" />
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div class="mb-3">
                            <h5 class="card-title">@product.Title</h5>
                            <p class="card-text">@product.Subtitle</p>
                        </div>
                        <p class="card-text h3">@product.Price</p>
                    </div>
                </div>
            </a>
        </div>
    }
</div>
