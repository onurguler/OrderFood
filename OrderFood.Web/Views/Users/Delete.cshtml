@model UserEditModel

<a asp-controller="Dashboard" asp-action="Users" class="btn btn-secondary btn-sm mb-3">&LeftArrow; Go Back</a>

<h1>Delete User</h1>

<p>Are you sure want to delete "@Model.UserName"?</p>

<form asp-controller="Users" asp-action="Delete" method="POST">
    <input type="hidden" asp-for="Id">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Dashboard" asp-action="Users" class="btn btn-secondary">Cancel</a>
</form>
